<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <EditText
        android:id="@+id/otp_edit_1"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_color_gray_solid_otp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/color687171"
        android:textSize="@dimen/_18ssp"
        tools:ignore="LabelFor,UnusedAttribute" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/otp_edit_2"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_color_gray_solid_otp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/color687171"
        android:textSize="@dimen/_18ssp"
        tools:ignore="Autofill,UnusedAttribute" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/otp_edit_3"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_color_gray_solid_otp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/color687171"
        android:textSize="@dimen/_18ssp"
        tools:ignore="UnusedAttribute" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/otp_edit_4"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@drawable/btn_color_gray_solid_otp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/color687171"
        android:textSize="@dimen/_18ssp"
        tools:ignore="UnusedAttribute" />

    <EditText
        android:id="@+id/otp_edit_5"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        android:visibility="gone"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/otp_edit_6"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:digits="0123456789"
        android:gravity="center"
        android:hint="@string/hint"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_4sdp"
        android:tag="1"
        android:textColor="@color/color687171"
        android:textSize="@dimen/_18ssp"
        android:visibility="gone" />

</LinearLayout>
