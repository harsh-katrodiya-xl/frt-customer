<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".view.activity.ResetPasswordActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/signInTitle"
        style="@style/bold26BlueTextLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_21sdp"
        android:text="Reset Password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".view.fragment.SignInFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordLBL"
                style="@style/regular14DarkGreyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Enter New Password"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/btn_color_gray_solid">

                <EditText
                    android:id="@+id/edtPassword"
                    style="@style/regular16DarkGreyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_15sdp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvConfirmPasswordLBL"
                style="@style/regular14DarkGreyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Confirm Password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@drawable/btn_color_gray_solid">

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    style="@style/regular16DarkGreyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_15sdp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/tvSubmit"
                style="@style/mediumwhiteText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:background="@drawable/btn_color_primary_solid"
                android:gravity="center"
                android:text="Submit"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/_16ssp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>