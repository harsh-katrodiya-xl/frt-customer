<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/llMain">

    <ImageView
        android:id="@+id/imgIntro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_onboarding1"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/introbg"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIntroTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/gt_eesti_display_medium"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/intotitle"/>

        <TextView
            android:id="@+id/tvIntroDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/gt_eesti_display_regular"
            android:textColor="@color/colorgray"
            android:text=""
            android:lineSpacingExtra="@dimen/_5sdp" />

    </LinearLayout>

</LinearLayout>